<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="button_primary_color">#3F51B5</color>
    <color name="button_secondary_color">#FFFFFF</color>
    <declare-styleable name="MultiStateToggleButton"><attr format="reference" name="values"/><attr format="reference" name="mstbPrimaryColor"/><attr format="reference" name="mstbSecondaryColor"/><attr format="reference" name="mstbColorPressedText"/><attr format="reference" name="mstbColorPressedBackground"/><attr format="reference" name="mstbColorPressedBackgroundResource"/><attr format="reference" name="mstbColorNotPressedText"/><attr format="reference" name="mstbColorNotPressedBackground"/><attr format="reference" name="mstbColorNotPressedBackgroundResource"/></declare-styleable>
    <dimen name="button_elevation_material">2dp</dimen>
    <dimen name="button_internal_padding">1dp</dimen>
    <dimen name="button_min_height">7dp</dimen>
    <dimen name="button_pressed_z_material">4dp</dimen>
    <dimen name="button_text_padding">2dp</dimen>
    <integer name="button_pressed_animation_delay">100</integer>
    <integer name="button_pressed_animation_duration">100</integer>
    <string name="center">Center</string>
    <string name="left">Left</string>
    <string name="right">Right</string>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="PrimaryNormalText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToggleStyle">
        <item name="android:padding">@dimen/button_text_padding</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorControlNormal</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>
    <style name="WhiteBoldText" parent="@android:style/Widget">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>